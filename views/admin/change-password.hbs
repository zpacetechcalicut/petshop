<section>
    <div class="container mt-4">
        <div class="row">

            <div class="column-md-6">
                <h2 class="text-center">Change Password</h2>

                <form action="/admin/change-password" method="post">
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control" value="{{adm.Name}}">

                    <label for="">Email</label>
                    <input type="email" name="Email" class="form-control" value="{{adm.Email}}">

                    <label for="">Enter current Password</label>
                    <input type="password" name="cPassword" class="form-control">

                    <label for="">Enter new Password</label>
                    <input type="password" name="Password" class="form-control">

                    {{#if passwordErr}}
                        <p class="error" style="color: red;">{{passwordErr}}</p>
                    {{/if}}

                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>

            </div>
        </div>
    </div>
</section>
<section>
  <div class="container">
    
      <h1>{{this.Category}}</h1>
 
    <div class="row mt-4">
      <a href="/admin/add-product" class="btn btn-success ml-auto mt-1 mr-5">Add Product</a>
    </div>
    <br>
    <table class="table mt-5" id="productsTable">
      <thead>
        <tr>
          
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Price</th>
          <th>Image</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        {{#each category_products}}
        <tr>
          
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Description}}</td>
          <td>{{this.Price}}</td>
          <td><img style="width:50px; height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
          <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure want to delete {{this.Name}}?')">Delete</a>
          </td>

        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>

<script>
$(function () {
  $('#productsTable').DataTable();

});
</script>